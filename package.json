{
  "name": "electron-app",
  "version": "1.0.1",
  "description": "electron app, demo electron app.",
  "main": "main.js",
  "scripts": {
    "start": "nodemon --exec 'electron .' --hot",
    "build:css": "tailwindcss-cli build -o renderer/main.css",
    "build": "electron-builder",
    "build:all": "electron-builder -mwl",
    "build:mac": "electron-builder -m",
    "build:win": "electron-builder -w",
    "build:linux": "electron-builder -l",
    "release": "electron-builder -l --publish 'onTagOrDraft'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahsanmahmood/electron-cp.git"
  },
  "keywords": [
    "electron, zaions, demo, aoneahsan"
  ],
  "author": "Ahsan Mahmood",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ahsanmahmood/electron-cp/issues"
  },
  "homepage": "https://github.com/ahsanmahmood/electron-cp#readme",
  "dependencies": {
    "autoprefixer": "^10.1.0",
    "boxicons": "^2.0.7",
    "electron-log": "^4.3.1",
    "electron-updater": "^4.3.5",
    "electron-window-state": "^5.0.3",
    "jquery": "^3.5.1",
    "postcss": "^8.2.2",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "nodemon": "^2.0.6"
  },
  "build": {
    "appId": "com.zaions.ElectronDemoApp",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "zip"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "description": "electron app, demo electron app."
    }
  }
}
